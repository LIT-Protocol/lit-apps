{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "NodeJS",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "module": "es6",
    "target": "ES6",
    "types": ["node"],
    "sourceMap": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
