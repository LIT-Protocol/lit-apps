{
  "name": "lit-apps",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "./node_modules/turbo/bin/turbo run build",
    "dev": "./node_modules/turbo/bin/turbo run dev --parallel",
    "lint": "./node_modules/turbo/bin/turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:el": "./node_modules/turbo/bin/turbo dev --filter event-listener-fe --filter event-listener-be",
    "postinstall": "./node_modules/turbo/bin/turbo"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "^1.8.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.19",
  "resolutions": {
    "ethereumjs-abi": "https://registry.npmjs.org/ethereumjs-abi/-/ethereumjs-abi-0.6.8.tgz"
  }
}
