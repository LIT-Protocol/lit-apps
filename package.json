{
  "name": "lit-apps",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:el": "turbo dev --filter event-listener-fe --filter event-listener-be",
    "build:el:fe": "turbo run build --filter event-listener-fe",
    "build:el:be": "turbo run build --filter event-listener-be",
    "heroku-postbuild": "if [ $CLIENT_ENV ]; then yarn build:el:fe; elif [ $SERVER_ENV ]; then yarn run build:el:be; else echo no environment detected, please set CLIENT_ENV or SERVER_ENV; fi"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "^1.8.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.19",
  "resolutions": {
    "ethereumjs-abi": "https://registry.npmjs.org/ethereumjs-abi/-/ethereumjs-abi-0.6.8.tgz"
  }
}
